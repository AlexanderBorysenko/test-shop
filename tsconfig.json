{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": true,
    "declaration": true /* Generates corresponding '.d.ts' file. */,
    "declarationDir": "./types/",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "./lib/" /* Redirect output structure to the directory. */,
    "baseUrl": ".",
    "module": "commonjs"
  }
}